@model IEnumerable<Projetcliniquemedical.Models.Medecin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2 style="color:black">Liste des médecins</h2>

<p>
    @Html.ActionLink("Créer nouveau médecin", "Create", null, new { Class = "btn btn-primary " })
</p>

<div class="row mb">
    <div class="content-panel">
        <div class="adv-table">
            <div class="col-lg-12">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered " id="hidden-table-info">
                    <thead>
                    <th>
                        @Html.DisplayNameFor(model => model.ServicesAccount.ServiceNom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAccount.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MedecinNom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MedecinPrenom)
                    </th>
                    <th>Actions</th>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServicesAccount.ServiceNom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserAccount.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedecinNom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedecinPrenom)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.MedecinID }, new { Class = "btn btn-primary btn-xs fa fa-eye" }) |
                                    @Html.ActionLink("Edit", "Edit", new { id = item.MedecinID }, new { Class = "btn btn-success btn-xs fa fa-pencil" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MedecinID }, new { Class = "btn btn-danger btn-xs fa fa-trash-o" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
             </div>
            </div>
        </div>
</div>